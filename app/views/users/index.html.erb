
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

<link href="/assets/style.css" rel="stylesheet">

<p id="notice"><%= notice %></p>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

  <div class="panel panel-default">

    <div class="panel-heading" role="tab" id="headingOne"><center><strong class="panel-title h-arrow">Listing Users</center><span title="Create New User"><%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_user_path,:class=>"icon-button-red", :style=>"text-align:right; background-color:white; color:green;float:right;"%></span></strong></div>

    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">

      <div class="table-container">

        <table class="table tab-container">
     
          <thead class="tab-header blue" style="background-color: #0288d1;">
        
            <tr>
    <tr>
      <th>Company Name</th>
      <th>Warehouse Name</th>
      <th>Role</th>
      <th>First name</th>
      <th>Last name</th>
      <th>User name</th>
      <th>Password</th>
      <th>Email</th>
       <th colspan="3"><center>Action</center></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
  <%unless Role.find(user.role_id).role_type=="Super Admin"%>
  <td style="text-align:left;"><%= Company.find(Warehouse.find(user.warehouse_id).company_id).company_name %></td>
   <td style="text-align:left;"><%= Warehouse.find(user.warehouse_id).warehouse_name %></td>
  <%else%><td>-</td><td>-</td><%end%>
        <td style="text-align:left;"><%= Role.find(user.role_id).role_type %></td>
        <td style="text-align:left;"><%= user.first_name %></td>
        <td style="text-align:left;"><%= user.last_name %></td>
        <td style="text-align:left;"><%= user.user_name %></td>
        <td style="text-align:left;"><%= user.password %></td>
        <td style="text-align:left;"><%= user.contact.email %></td>
        <td><%= link_to "<i class='fa fa-eye' aria-hidden='true'></i>".html_safe, user,:class=>"btn-sm btn-default",:title=>"Show #{user.user_name}"%></td>
        
                <td><%= link_to "<i class='fa fa-pencil' aria-hidden='true'></i>".html_safe, edit_user_path(user),:class=>"btn-sm btn-default",:title=>"Edit #{user.user_name}" %></td>
        
                <td><%= link_to "<i class='fa fa-trash-o' aria-hidden='true'></i>".html_safe, user, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn-sm btn-default",:title=>"Delete #{user.user_name}" %></td>

              </tr>
    
           <%end%>
  
          </tbody>

        </table>

      </div>

    </div>

  </div>

</div>
